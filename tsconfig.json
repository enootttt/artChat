{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["packages/*"],
      "@artmate/chat": ["packages/index.ts"]
    },
    "declaration": true,
    "strict": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es2020",
    "lib": ["dom", "es2020"],
    "skipLibCheck": true,
    "stripInternal": true,
    "resolvePackageJsonExports": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "lib", "es"]
}
